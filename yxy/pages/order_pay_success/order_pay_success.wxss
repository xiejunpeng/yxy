}

.paya {
  width: 560rpx;
  margin: 135rpx auto 0 auto;
}

.paya .bt {
  display: inline-block;
  width: 260rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  border: solid 1rpx #06b2b6;
  border-radius: 10rpx;
  box-sizing: border-box;
  background-color: #06b2b6;
  padding: 20rpx 0;
