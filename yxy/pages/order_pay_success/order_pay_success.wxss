}

.payico image {
  display: block;
  width: 190rpx;
  margin: 90rpx auto 0 auto;
}

.paytxt, .payprice {
  text-align: center;
  overflow: hidden;
}

.paytxt {
  color: #808080;
  font-size: 32rpx;
  margin-top: 25rpx;
}

.payprice {
  color: #333;
