        <view class="data_center">
          <view class="data_name">丽思阁</view>
          <view class="annotation">60平米 可住2人</view>
          <view class="check_detail">查看详情 ></view>
        </view>
        <view class="change">
          <text class="ticket_name">购买</text>
          <image class="type_img" src="../images/check_logo.png"></image>
        </view>
      </view>
    </view>
  </view>
  <view class="businesses">

  </view>
  <!-- 主体详情 -->
  <view class="main">
    <view class="mainTitle">
      <view class="titles">
        <image class="titlesImg" src="../images/icon13.jpg"></image>
        <text class="titleText active">图文详情</text>
      </view>
      <view class="titles">
        <text class="titleText">洒店设施</text>
      </view>
      <view class="titles">
