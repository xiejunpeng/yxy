    <view class="logo_item">
      <view class="logo_left">
        <image class="logo_leftImg" src="../images/back.jpg"></image>
        <text class="logo_name">首页</text>
      </view>
      <view class="logo_left">
        <image class="logo_leftImg" src="../images/kefu.jpg"></image>
        <text class="logo_name">客服</text>
      </view>
