/* pages/my/my.wxss */

.myTop {
  position: relative;
  min-height: 200rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
}

.mbg {
  position: absolute;
  width: 100%;
  top: 0;
  z-index: 0;
}

.mbg image {
  display: block;
  width: 100%;
}

.myhead, .myname {
  position: absolute;
  z-index: 1;
}

.myhead {
  display: table-cell;
  vertical-align: middle;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  background-color: #fff;
  border: solid 5rpx #fff;
  top: 40rpx;
  left: 50%;
  margin-left: -60rpx;
}

.myhead, .myhead image {
  border-radius: 120rpx;
}

.myhead image {
  width: 100%;
  height: 100%;
}

.myname {
  width: 100%;
  font-size: 34rpx;
  font-weight: bolder;
  letter-spacing: 1rpx;
  color: #333;
  text-align: center;
  top: 175rpx;
}

.odcolumn {
  position: relative;
  background-color: #fff;
  margin: 105rpx 30rpx 0 30rpx;
  padding: 137rpx 25rpx 65rpx 25rpx;
  border-radius: 10rpx;
  box-shadow: -5rpx 5rpx 10rpx -4rpx #e7e7e7, 3rpx 3rpx 8rpx -2rpx #e7e7e7;
  overflow: hidden;
}

.odcolumn .tit {
  font-size: 34rpx;
  color: #333;
  line-height: 34rpx;
  border-bottom: solid 1rpx #f2f2f2;
  overflow: hidden;
  padding: 25rpx 20rpx 22rpx 20rpx;
}

.odcolumn .tit .s1 {
  float: left;
  font-weight: bolder;
}

.odcolumn .tit .more {
  position: relative;
  float: right;
  color: #b2b2b2;
  font-size: 28rpx;
  padding-right: 20rpx;
}

.odcolumn .tit .arrow {
  position: absolute;
  height: 16rpx;
  width: 16rpx;
  border-width: 1rpx 1rpx 0 0;
  border-color: #b2b2b2;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  right: 0rpx;
  top: 50%;
  margin-top: -11rpx;
}

.odcolumn .status {
  padding-top: 20rpx;
}

.odcolumn .status .sl {
  float: left;
  width: 25%;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.odcolumn .status .dico {
  position: relative;
  width: 65rpx;
  height: 65rpx;
  margin: 0 auto 15rpx auto;
}

.odcolumn .status .dico image {
  display: block;
  width: 65rpx;
}

.odcolumn .status .dico .num {
  position: absolute;
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  background-color: #f00;
  font-size: 22rpx;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
  border-radius: 16rpx;
  top: -2rpx;
  right: -5rpx;
}

.myBlock{ margin-top:30rpx;}
.myBlock .block{ position: relative; padding:35rpx 30rpx; border-bottom:solid 1rpx #f2eded; overflow:hidden;}
.myBlock .block image{ float:left; width:34rpx;}
.myBlock .block .txt{ float:left; color: #666; font-size:30rpx; line-height: 34rpx; margin-left:20rpx;}
.myBlock .block .iconfont{ float:right; color:#b2b2b2;}
.myBlock .block .arrow {
  position: absolute;
  height: 16rpx;
  width: 16rpx;
  border-width: 1rpx 1rpx 0 0;
  border-color: #b2b2b2;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  right: 35rpx;
  top: 50%;
  margin-top: -11rpx;
}