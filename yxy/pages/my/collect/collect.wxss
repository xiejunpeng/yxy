/* pages/my/collect/collect.wxss */

page {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.boxSearch {
  position: fixed;
  width: 100%;
  background-color: #fff;
  padding: 22rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  z-index: 3;
  top: 0;
}

.boxSearch .bsShow {
  color: #ccc;
  cursor: pointer;
}

.boxSearch .bsShow, .boxSearch .txt-search {
  width: 100%;
  height: 68rpx;
  font-size: 30rpx;
  line-height: 68rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  background-color: #f7f7f7;
  padding: 0 20rpx 0 82rpx;
}

.boxSearch .bsHide {
  display: block;
  padding-right: 80rpx;
}

.boxSearch .ico {
  position: absolute;
  width: 35rpx;
  top: 38rpx;
  left: 50rpx;
}

.boxSearch .btSearch {
  position: absolute;
  height: 68rpx;
  color: #808080;
  font-size: 32rpx;
  line-height: 68rpx;
  text-align: right;
  right: 30rpx;
  top: 21rpx;
  cursor: pointer;
  padding: 0;
  background-color: transparent;
}

.boxSearch .btSearch::after {
  border: none;
}

.collectNav {
  position: fixed;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  box-sizing: border-box;
  z-index: 3;
  border-bottom: solid 1rpx #e6e6e6;
  top:112rpx;
}

.collectNav .nav {
  float: left;
  position: relative;
  width: 20%;
  height: 72rpx;
  font-size: 34rpx;
  line-height: 72rpx;
  color: #333;
  text-align: center;
  cursor: pointer;
}

.collectNav .navon text {
  display: inline-block;
  border-bottom: solid 5rpx #06b2b6;
  line-height: 72rpx;
  color: #06b2b6;
  padding: 0 8rpx;
}


.main {
  flex: 1;
  overflow: auto; /* winphone8å’Œandroid4+ */
  -webkit-overflow-scrolling: touch; /* ios5+ */
  padding:192rpx 0 100rpx 0;
}

.shop {
  background: #fff;
  display: flex;
  padding: 30rpx 0;
  border-bottom: solid 1rpx #f2f2f2;
  margin: 0 25rpx;
}

.shop:last-child {
  border-bottom: none;
}

.shop_check_box {
  margin: 100rpx 20rpx 0 0;
}

.shop_img {
  width: 200rpx;
  height: 240rpx;
  margin: 0 20rpx 0 0;
  border-radius: 10rpx;
}

.shop_detail {
  flex: 1;
}

.shop_name {
  color: #333;
  font-size: 32rpx;
  line-height: 40rpx;
  display: block;
  max-height: 80rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.shop_detail_bottom {
  display: flex;
  color: #808080;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-top: 15rpx;
}

.shop_detail_bottom text {
  color: #ff3d3d;
}

.shop_price {
  font-size: 38rpx;
  color: #e51c23;
  margin-right: 15rpx;
}

.boxLb {
  position: relative;
  padding-right: 100rpx;
  overflow: hidden;
}

.boxLb text {
  display: inline-block;
  color: #808080;
  font-size: 24rpx;
  line-height: 38rpx;
  background-color: #f5f5f5;
  margin: 8rpx 8rpx 0 0;
  padding: 5rpx 10rpx;
}

.boxLb .site {
  position: absolute;
  right: 0;
  bottom: 8rpx;
}

.boxLb .site image {
  display: block;
  float: left;
  width: 20rpx;
  margin-top: 8rpx;
}

.boxLb .site .stxt {
  float: left;
  width: 85rpx;
  font-size: 28rpx;
  color: #808080;
  margin-left: 13rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.footer {
  position: fixed;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: solid 1rpx #e2e2e2;
  bottom: 0;
  left: 0;
  z-index: 3;
}

.check_box {
  float: left;
  line-height: 90rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
}

.check_box .icon {
  float: left;
  margin-top: 16rpx;
}

.check_text {
  margin-left: 15rpx;
  line-height: 90rpx;
}

.footer .bt, .footer .btdelete {
  float: right;
  width: 150rpx;
  height: 58rpx;
  font-size: 30rpx;
  line-height: 58rpx;
  text-align: center;
  border-radius: 40rpx;
  margin-right: 25rpx;
  margin-top: 20rpx;
  color: #06b2b6;
  border: solid 1rpx #06b2b6;
}

.footer .btdelete {
  color: #808080;
  border: solid 1rpx #808080;
}

.deleteshop {
  line-height: 90rpx;
  font-size: 28rpx;
  margin: 0 30rpx;
}
