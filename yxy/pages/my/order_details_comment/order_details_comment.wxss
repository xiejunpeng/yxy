/* pages/my/order_details_comment/order_details_comment.wxss */
page {
  background-color: #fafafa;
  padding-bottom: 100rpx;
}

.boxStatus {
  position: relative;
}

.boxStatus image {
  display: block;
  width: 100%;
}

.boxStatus .txt {
  position: absolute;
  color: #fff;
  font-size: 28rpx;
  top: 50%;
  left: 90rpx;
  margin-top: -46rpx;
}

.boxStatus .txt .p1 {
  font-size: 36rpx;
  font-weight: bolder;
  margin-bottom: 8rpx;
}

/*订单列表*/

.orderList .list {
  background-color: #fff;
  padding: 35rpx 0 55rpx 0;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.orderList .ct {
  position: relative;
  color: #333;
  background-color: #fafafa;
  padding: 30rpx 25rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.orderList .ct image {
  float: left;
  display: block;
  width: 150rpx;
}

.orderList .ct .txt {
  float: left;
  width: 390rpx;
  padding: 0 0 0 15rpx;
  box-sizing: border-box;
}

.orderList .ct .tit {
  font-size: 30rpx;
  line-height: 38rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 6rpx;
}

.orderList .ct .type {
  font-size: 24rpx;
  line-height: 36rpx;
  color: #b2b2b2;
}

.orderList .ct .price {
  float: right;
  width: 150rpx;
  overflow: hidden;
}

.orderList .ct .price text {
  display: block;
  font-size: 30rpx;
  text-align: right;
  word-break: break-all;
}

.orderList .ct .price .p2 {
  color: #b2b2b2;
  font-size: 28rpx;
}

.orderList .total, .orderList .status {
  text-align: right;
}

.orderList .total {
  color: #b2b2b2;
  font-size: 28rpx;
  padding: 25rpx 25rpx 0 25rpx;
}

.orderList .total text {
  font-size: 38rpx;
  color: #333;
  margin-left: 20rpx;
}

.orderList .status {
  font-size: 32rpx;
  color: #666;
  padding: 12rpx 25rpx 0 25rpx;
}

.orderList .bm {
  padding: 30rpx 25rpx 0 25rpx;
}

.orderList .bm text {
  display: block;
  float: right;
  width: 150rpx;
  height: 58rpx;
  font-size: 30rpx;
  line-height: 58rpx;
  text-align: center;
  border-radius: 40rpx;
  margin-left: 20rpx;
}

.orderList .bm .bt1 {
  background-color: #fff;
  color: #666;
  border: solid 1rpx #666;
}

.orderList .bm .bt2 {
  background-color: #06b2b6;
  color: #fff;
  border: solid 1rpx #06b2b6;
}

/*订单列表 end*/

.odBlock {
  background-color: #fff;
  margin-top: 10rpx;
  margin-bottom: 15rpx;
  padding: 20rpx 25rpx 45rpx 25rpx;
}

.odBlock .h3 {
  color: #333;
  font-size: 34rpx;
  line-height: 34rpx;
  margin-top: 30rpx;
}

.odBlock .odrow {
  margin-top: 28rpx;
  overflow: hidden;
}

.odBlock .odrow .tit {
  float: left;
  width: 160rpx;
  font-size: 32rpx;
  color: #808080;
}

.odBlock .odrow .txt {
  float: right;
  width: 530rpx;
  font-size: 32rpx;
  color: #333;
}

.oddetailsBm {
  position: fixed;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: solid 1rpx #e2e2e2;
  bottom: 0;
  padding: 0 25rpx;
  box-sizing: border-box;
  z-index: 2;
}

.oddetailsBm .bt1, .oddetailsBm .bt2 {
  display: block;
  float: right;
  width: 150rpx;
  height: 58rpx;
  font-size: 30rpx;
  line-height: 58rpx;
  text-align: center;
  border-radius: 40rpx;
  margin-left: 25rpx;
  margin-top: 20rpx;
}

.oddetailsBm .bt1 {
  background-color: #fff;
  color: #666;
  border: solid 1rpx #666;
}

.oddetailsBm .bt2 {
  background-color: #06b2b6;
  color: #fff;
  border: solid 1rpx #06b2b6;
}
