/* pages/index/index.wxss */

.boxView {
  width: 100%;
  height: 100%;
  background-color: #fafafa;
}

.boxSearch {
  position: fixed;
  width: 100%;
  background-color: #f99a25;
  padding: 22rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  z-index: 3;
  top: 0;
}

.boxSearch .bsShow {
  color: #ccc;
  cursor: pointer;
}

.boxSearch .bsShow, .boxSearch .txt-search {
  width: 100%;
  height: 56rpx;
  font-size: 22rpx;
  line-height: 56rpx;
  border-radius: 35rpx;
  box-sizing: border-box;
  background-color: #fff;
  padding: 0 20rpx 0 82rpx;
}

.boxSearch .bsHide {
  display: block;
  padding-right: 80rpx;
}

.boxSearch .ico {
  position: absolute;
  width: 35rpx;
  top: 32rpx;
  left: 50rpx;
}

.boxSearch .btSearch {
  position: absolute;
  height: 56rpx;
  color: #FFF;
  font-size: 32rpx;
  line-height: 56rpx;
  text-align: right;
  right: 30rpx;
  top: 21rpx;
  cursor: pointer;
  padding: 0;
  background-color: transparent;
}

.boxSearch .btSearch::after {
  border: none;
}

swiper {
  margin-top: 112rpx;
}

.slide-image {
  width: 100%;
}

/*首页导向*/

.boxMen {
  background-color: #fff;
  padding-bottom: 30rpx;
  overflow: hidden;
}

.menlable {
  float: left;
  width: 25%;
  text-align: center;
  font-size: 28rpx;
  margin: 20rpx 0 10rpx 0;
}

.menlable .nl {
  width: 84rpx;
  height: 84rpx;
  margin: 0 auto 5rpx auto;
  padding: 10rpx;
  border-radius: 20rpx;
}

.menlable .nl image {
  width: 84rpx;
  height: 84rpx;
}

.menlable .tit {
  display: block;
  color: #4d4d4d;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/*首页导向 end*/

.boxBlock {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0;
  overflow: hidden;
}
/* 热门线路标题部份 */
.boxTit {
  padding: 35rpx 25rpx 0 25rpx;
  overflow: hidden;
}

.boxTit .ico {
  float: left;
  width: 38rpx;
}

.boxTit .tit {
  float: left;
  line-height: 38rpx;
  font-size: 36rpx;
  color: #1a1a1a;
  margin-left: 10rpx;
}

.boxTit .more {
  position: relative;
  float: right;
  font-size: 30rpx;
  line-height: 38rpx;
  color: #808080;
  padding-right: 26rpx;
}

.boxTit .arrow {
  position: absolute;
  height: 16rpx;
  width: 16rpx;
  border-width: 1rpx 1rpx 0 0;
  border-color: #666;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  right: 0rpx;
  top: 50%;
  margin-top: -11rpx;
}
/* 热门线路标题部份 */
/* 热门线路公共部份 */
.boxList {
  display: block;
  padding: 3rpx 25rpx 0rpx 0rpx;
  overflow: hidden;
}

.boxList .list {
  float: left;
  width: 50%;
  padding: 25rpx 0 0 20rpx;
  box-sizing: border-box;
}

.boxList .list .pic {
  position: relative;
}

.boxList .list .site {
  position: absolute;
  background-color: #141414;
  top: 15rpx;
  left: 15rpx;
  padding: 12rpx 6px;
  border-radius: 8rpx;
  opacity: 0.7;
}

.boxList .list .site image {
  float: left;
  width: 15rpx;
  margin-top: 2px;
}

.boxList .list .site text {
  float: left;
  font-size: 24rpx;
  line-height: 28rpx;
  color: #fff;
  margin-left: 15rpx;
}

.boxList .list .img {
  display: block;
  width: 100%;
  height: 230rpx;
  border-radius: 15rpx;
}

.boxList .list .tit {
  color: #333;
  font-size: 30rpx;
  padding-top: 19rpx;
  box-sizing: border-box;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.boxList .list .lbl text {
  display: inline-block;
  background-color: #f5f5f5;
  font-size: 24rpx;
  color: #808080;
  padding: 5rpx 10rpx;
  margin-right: 5rpx;
}
/* 价钱 */
.boxList .list .price {
  color: #ff3d3d;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.boxList .list .price .qi {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #4d4d4d;
}

.boxList .list .price text {
  font-size: 36rpx;
  margin-left: 5rpx;
}

.boxList .list .price .activity {
  float: right;
  display: block;
  border: solid 1rpx #06b2b6;
  color: #06b2b6;
  font-size: 26rpx;
  line-height: 28rpx;
  padding: 5rpx 8rpx;
  margin-top: 2rpx;
}
/* 热门线路公共部份 */
.boxMore {
  position: relative;
  height: 30rpx;
  padding-bottom: 16px;
}

.boxMore .arrow {
  position: absolute;
  height: 25rpx;
  width: 25rpx;
  border-width: 1rpx 1rpx 0 0;
  border-color: #bfbfbf;
  border-style: solid;
  transform: rotate(135deg);
  right: 50%;
  top: 0;
  margin-right: -8rpx;
}

/*电话二维码*/

.boxLink {
  position: fixed;
  bottom: 80rpx;
  right: 15rpx;
  z-index: 100;
}

.boxLink .pic {
  width: 110rpx;
  margin-bottom: 5rpx;
}

.boxLink .pic image {
  display: block;
  width: 100%;
}

.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.5;
  z-index: 101;
  top: 0;
}

.boxEr {
  position: fixed;
  width: 330rpx;
  font-size: 32rpx;
  color: #666;
  text-align: center;
  background-color: #fff;
  z-index: 102;
  top: 50%;
  left: 50%;
  margin: -190rpx 0 0 -205rpx;
  padding: 40rpx;
}

.boxEr image {
  display: block;
  width: 330rpx;
  margin: 0 auto 20rpx auto;
}

.boxEr .close {
  position: absolute;
  font-size: 38rpx;
  color: #f00;
  top: 0;
  right: 15rpx;
}

/*电话二维码 end*/

/* 景点门票下的内容 */

.listItem {
  display: flex;
  padding: 30rpx 26rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.picItem {
  flex: 1;
}

.picItem .img {
  display: block;
  width: 100%;
  height: 230rpx;
  border-radius: 15rpx;
}

.boxListItem {
  flex: 1;
  margin-left: 20rpx;
}

.boxListItem .tit {
  color: #333;
  font-size: 30rpx;
  /* padding-top: 19rpx; */
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 300rpx;
}

.priceActivity {
  display: inline-block;
  font-size: 20rpx;
  color: #f7860c;
  background-color: #fff5ec;
  line-height: initial;
  margin:10rpx;
}
.prices{
  margin-top:50rpx;
}
.prices .moneyLogo {
  font-size: 30rpx;
  color: #f7860c;
}

.prices .money {
  font-size: 40rpx;
  margin-left: 10rpx;
  color: #f7860c;
  margin-top:20rpx;
  display: inline-block;
}

.prices .qi {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #4d4d4d;
}
.footer{
  height: 80rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer image{
  width: 300rpx;
  height: 40rpx;
}