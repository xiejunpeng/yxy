/* pages/verify_phone/verify_phone.wxss */
.v-logo {
  width: 155rpx;
  height: 155rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 35rpx auto 0 auto;
  overflow: hidden;
}

.v-logo image {
  max-width: 100%;
  max-height: 100%;
}

.v-intro {
  width: 65%;
  color: #666;
  font-size: 30rpx;
  margin: 20rpx auto 0 auto;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.v-input {
  width: 100%;
  padding: 40rpx 65rpx 0 65rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.v-input .irow {
  position: relative;
  border-bottom: solid 1rpx #f0f0f0;
  margin-top: 5rpx;
}

.v-input .last {
  border-bottom: none;
  text-align: center;
}

.v-input .irow .dtit {
  position: absolute;
  font-size: 30rpx;
  color: #333;
  line-height: 100rpx;
  left: 0;
}

.v-input .irow .txt {
  width: 100%;
  height: 100rpx;
  font: normal 30rpx/100rpx "微软雅黑";
  border: none;
  padding-left: 180rpx;
  outline: none;
  box-sizing: border-box;
}

.v-input .irow .btcode {
  position: absolute;
  width:190rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 68rpx;
  background-color: #06b2b6;
  padding: 0;
  border-radius: 10rpx;
  cursor: pointer;
  outline: none;
  top: 18rpx;
  right: 0;
  z-index: 2;
}

.v-input .irow .btcodeOn {
  color: #999;
  background-color: #e6e6e6;
}

.v-input .irow .btsubmit {
  width: 100%;
  height: 90rpx;
  color: #999;
  font: normal 32rpx/90rpx "微软雅黑";
  background-color: #e6e6e6;
  border-radius: 10rpx;
  cursor: pointer;
  outline: none;
  margin-top: 140rpx;
}

.v-input .irow .btcode::after, .v-input .irow .btsubmit::after{
  border: none;
}

.v-input .irow .active {
  color: #fff;
  background-color: #06b2b6;
}

.v-input .irow .aback {
  display: block;
  float: none;
  font-size: 28rpx;
  color: #06b2b6;
  margin-top: 80rpx;
  text-decoration: underline;
}

.hint {
  position: absolute;
  width: 399rpx;
  color: #333;
  background-color: #fff;
  box-shadow: 0 0 15rpx #ccc;
  padding: 35rpx 25rpx;
  top: 50%;
  left: 50%;
  margin: -78rpx 0 0 -200rpx;
  z-index: 3;
}

.hint icon {
  float: left;
}

.hint text {
  float: left;
  font-size: 30rpx;
  margin-left: 22rpx;
}
